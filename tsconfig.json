{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "lib": [
      "es6"
    ],
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "strict": false,
    "alwaysStrict": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
  },
