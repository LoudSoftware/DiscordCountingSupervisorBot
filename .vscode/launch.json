{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}\\src\\bot.ts",
            "stopOnEntry": true,
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}\\dist\\**\\*.js"],
            "trace": "sm"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "serve"
            ],
            "port": 9229,
            "console": "internalConsole",
            "sourceMaps": true,
            "timeout": 60000
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp serve",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "serve"
            ],
            "useWSL": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Heroku",
            "address": "localhost",
            "port": 9229,
            "protocol": "inspector",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
        },
    ]
}